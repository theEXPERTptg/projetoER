<Alloy>
    <Window id="mainWindow" class="container">
        <!-- Top Container for User Profile -->
        <View class="profileContainer">
            <!-- User Info Container -->
            <View id="userInfo" class="userInfo">
                <Label id="userName" class="userName" text="Welcome, Jon Doe"></Label>
                <ImageView id="userPhoto" class="userPhoto" image="/ProfilePic.png"></ImageView>
            </View>

            <!-- Upcoming Appointments Container -->
            <View id="upcomingAppointments">
                <Label id="appointmentTitle" class="appointmentTitle" text="Upcoming Appointments"></Label>
                <Label id="appointmentDetails" class="appointmentDetails" text="Consultation - General - 25-12 13:15"></Label>
            </View>

            <!-- Buttons Container -->
            <View id="buttonContainer" class="buttonContainer">
                <Button id="HomeBtn" title="Home" class="button" onClick="showHome" backgroundColor="#789E9E"></Button>
                <Button id="ScheduleBtn" title="Schedule" class="button" onClick="showSchedule"></Button>
                <Button id="HealthBtn" title="Health Metrics" class="button" onClick="showHealth"></Button>
            </View>
        </View>
        







</Alloy>