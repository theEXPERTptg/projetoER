<Alloy>
    <Window id="mainWindow" class="container" backgroundColor="#789E9E">
        <!-- Main Container to Center Forms -->
        <View id="mainContainer" class="OutterLayoutBox">
            <View id="registerFormPage1" class="form">
                <View height="20%">
                    <ImageView id="userPhoto" image="/ProfilePic.png" ></ImageView>
      
                    <View backgroundColor="red" top="67%" height="20%" width="8%" left="57.5%" borderRadius="20px"></View>
                </View>
                <ScrollView class="scrollableItem" layout="vertical">

                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Password:"></Label>
                    </View>

                        <TextField id="password" hintText="Alterar password" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Confirmar nova password:"></Label>
                    </View>

                        <TextField id="confirmPassword" hintText="Confirmar nova password" class="input"></TextField>
                    
                    <Button id="save" title="Salvar" onClick="updateValues"></Button>
                    <Button id="back" title="Voltar" onClick="goToProfile"></Button>
                </ScrollView>
            </View>
        </View>
    </Window>
</Alloy>