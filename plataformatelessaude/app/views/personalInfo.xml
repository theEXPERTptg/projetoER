<Alloy>
    <Window id="mainWindow" class="container" backgroundColor="#789E9E">
        <!-- Main Container to Center Forms -->
        <View id="mainContainer" class="OutterLayoutBox">
            <View id="registerFormPage1" class="form">
                <View height="20%">
                    <ImageView id="userPhoto" image="/ProfilePic.png" ></ImageView>
      
                    <View backgroundColor="red" top="67%" height="20%" width="8%" left="57.5%" borderRadius="20px"></View>
                </View>
                <ScrollView class="scrollableItem" layout="vertical">

                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Nome:"></Label>
                    </View>

                        <TextField id="name" hintText="Nome" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Género:"></Label>
                    </View>

                        <TextField id="gender" hintText="Género" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Data de Nascimento (dd/mm/aaaa):"></Label>
                    </View>
                    
                        <TextField id="birthDate" hintText="Data de Nascimento (dd/mm/aaaa)" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="NIF:"></Label>
                    </View>
                    
                        <TextField id="NifNumber" hintText="NIF" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Número de telemóvel:"></Label>
                    </View>
                    
                        <TextField id="phoneNumber" hintText="Número de telemóvel" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Email:"></Label>
                    </View>
                    
                        <TextField id="email" hintText="Email" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Nome contacto de emergência:"></Label>
                    </View>
                    
                        <TextField id="emergencyName" hintText="Nome contacto de emergência" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Telemóvel do contacto de emergência:"></Label>
                    </View>
                    
                        <TextField id="emergencyPhoneNumber" hintText="Telemóvel do contacto de emergência" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Relação/Parentesco:"></Label>
                    </View>
                    
                        <TextField id="relationship" hintText="Relação/Parentesco" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Peso:"></Label>
                    </View>
                    
                        <TextField id="weight" hintText="Peso em kilogramas" class="input"></TextField>
                    
                    <View class="sectionTitleContainer">
                        <Label class="sectionTitleSmaller" text="Altura:"></Label>
                    </View>
                    
                        <TextField id="height" hintText="Altura em centímetros" class="input"></TextField>

                    <Button id="save" title="Salvar" onClick="updateValues"></Button>
                    <Button id="back1" title="Voltar" onClick="goToProfile"></Button>
                </ScrollView>
            </View>
        </View>
    </Window>
</Alloy>